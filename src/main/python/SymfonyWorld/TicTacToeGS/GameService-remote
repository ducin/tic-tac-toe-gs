import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

import GameService
from ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print ''
  print 'Usage: ' + sys.argv[0] + ' [-h host[:port]] [-u url] [-f[ramed]] function [arg1 [arg2...]]'
  print ''
  print 'Functions:'
  print '   listGames()'
  print '  string newGame()'
  print '  Game gameInfo(string gameId)'
  print '  void quitGame(string userToken, string GameId)'
  print '  string registerGamePlayer(string gameId)'
  print '  Player gameNextMove(string gameId)'
  print '  bool gameMove(string userToken, byte position)'
  print ''
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  if url[4]:
    uri += '?%s' % url[4]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = GameService.Client(protocol)
transport.open()

if cmd == 'listGames':
  if len(args) != 0:
    print 'listGames requires 0 args'
    sys.exit(1)
  pp.pprint(client.listGames())

elif cmd == 'newGame':
  if len(args) != 0:
    print 'newGame requires 0 args'
    sys.exit(1)
  pp.pprint(client.newGame())

elif cmd == 'gameInfo':
  if len(args) != 1:
    print 'gameInfo requires 1 args'
    sys.exit(1)
  pp.pprint(client.gameInfo(args[0],))

elif cmd == 'quitGame':
  if len(args) != 2:
    print 'quitGame requires 2 args'
    sys.exit(1)
  pp.pprint(client.quitGame(args[0],args[1],))

elif cmd == 'registerGamePlayer':
  if len(args) != 1:
    print 'registerGamePlayer requires 1 args'
    sys.exit(1)
  pp.pprint(client.registerGamePlayer(args[0],))

elif cmd == 'gameNextMove':
  if len(args) != 1:
    print 'gameNextMove requires 1 args'
    sys.exit(1)
  pp.pprint(client.gameNextMove(args[0],))

elif cmd == 'gameMove':
  if len(args) != 2:
    print 'gameMove requires 2 args'
    sys.exit(1)
  pp.pprint(client.gameMove(args[0],eval(args[1]),))

else:
  print 'Unrecognized method %s' % cmd
  sys.exit(1)

transport.close()
